@model SharedViewModels.Categories.CategoryDto
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold mb-2">@Model.Name</h1>
        <p class="text-gray-600">@Model.Description</p>
    </div>

    @if (Model.Subcategories != null && Model.Subcategories.Any())
    {
        <div class="mb-8">
            <h2 class="text-xl font-semibold mb-4">Subcategories</h2>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                @foreach (var subcategory in Model.Subcategories)
                {
                    <a href="category/@subcategory.Slug" class="block p-4 border rounded-lg hover:shadow-md transition-shadow">
                        <h3 class="font-medium">@subcategory.Name</h3>
                        <p class="text-sm text-gray-500">@subcategory.Description</p>
                    </a>
                }
            </div>
        </div>
    }

    <div>
        <h2 class="text-xl font-semibold mb-4">Products</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <!-- This would be populated with actual products in a real implementation -->
            <p class="col-span-full text-gray-500">No products found in this category.</p>
        </div>
    </div>
</div>
