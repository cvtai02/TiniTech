@using SharedViewModels.Categories
@model List<CategoryDto>

<nav class="bg-transparent px-16 flex items-center justify-between shadow-md grow">
    <div>
        <img src="~/assets/logo.png" alt="Logo" class="h-12 w-12" />
    </div>
    <ul class="flex gap-16 text-black px-6 py-4">
        @foreach (var category in Model)
        {
            <li class="relative group">
                <button
                    class="font-semibold hover:text-blue-600"
                    title="@category.Description">
                    @category.Name
                </button>
                <ul class="absolute left-0 mt-2 w-48 bg-white shadow-lg rounded-md opacity-0 group-hover:opacity-100 transition-opacity duration-200 z-10">
                    @foreach (var sub in category.Subcategories)
                    {
                        <li>
                            <a
                                href="#"
                                title="@sub.Description"
                                class="block px-4 py-2 text-gray-600 hover:bg-blue-50 hover:text-blue-700">
                                @sub.Name
                            </a>
                        </li>
                    }
                </ul>
            </li>
        }
    </ul>
    <div>
        <div class="relative">
            <input
                type="text"
                placeholder="Tìm kiếm sản phẩm..."
                class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
            <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    viewBox="0 0 20 20"
                    fill="currentColor">
                    <path
                        fill-rule="evenodd"
                        d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.817-4.817A6 6 0 012 8z"
                        clip-rule="evenodd" />
                </svg>
            </div>
        </div>
    </div>
</nav>