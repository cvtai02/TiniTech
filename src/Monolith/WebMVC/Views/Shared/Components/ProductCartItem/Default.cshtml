@model SharedViewModels.Products.ProductDetailDto

<div class="cart-item d-flex align-items-center p-3 border-bottom">
    <!-- Product Image -->
    <div class="cart-item-image me-3">
        <img src="@Model.DefaultImageUrl" alt="@Model.Name" class="img-fluid" style="max-width: 80px;">
    </div>
    
    <!-- Product Details -->
    <div class="cart-item-details flex-grow-1">
        <h5 class="mb-1">@Model.Name</h5>
        <div class="text-muted small">SKU: @Model.Sku</div>
        
        @if (Model.Variants.Any())
        {
            <div class="variant-info small">
                @foreach (var attr in Model.Attributes.Where(a => a.IsPrimary))
                {
                    <span class="me-2">@attr.Name: 
                    @foreach (var val in attr.Values)
                    {
                        <span class="badge bg-secondary">@val.Value</span>
                    }
                    </span>
                }
            </div>
        }
    </div>
    
    <!-- Price and Quantity -->
    <div class="cart-item-price me-3 text-end">
        <div class="fw-bold">@Model.Price.ToString("C")</div>
    </div>
    
    <!-- Quantity Controls -->
    <div class="cart-item-quantity me-3">
        <div class="input-group input-group-sm" style="width: 120px;">
            <button class="btn btn-outline-secondary decrease-quantity" type="button" 
                    data-product-id="@Model.Id">-</button>
            <input type="text" class="form-control text-center quantity-input" 
                   value="1" min="1" max="@Model.Stock" 
                   data-product-id="@Model.Id">
            <button class="btn btn-outline-secondary increase-quantity" type="button" 
                    data-product-id="@Model.Id">+</button>
        </div>
    </div>
    
    <!-- Subtotal and Remove -->
    <div class="cart-item-actions text-end">
        <div class="subtotal fw-bold mb-2">
            <span class="subtotal-value">@Model.Price.ToString("C")</span>
        </div>
        <button class="btn btn-sm btn-danger remove-item" 
                data-product-id="@Model.Id">
            <i class="bi bi-trash"></i> Remove
        </button>
    </div>
</div>
