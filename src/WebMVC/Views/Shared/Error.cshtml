@using WebMVC.Models
@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="error-container text-center py-5">
    <div class="error-icon mb-4">
        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
    </div>
    
    <div class="error-content">
        <h1 class="display-4 text-danger mb-3">Oops! Something went wrong</h1>
        <p class="lead mb-4">We apologize for the inconvenience. An error occurred while processing your request.</p>
        
        @if (Model.ShowRequestId)
        {
            <div class="error-details mb-4">
                <p class="text-muted small">
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            </div>
        }
        
        <div class="error-actions mb-5">
            <a href="/" class="btn btn-primary btn-lg">Return to Home</a>
            <button onclick="window.history.back()" class="btn btn-outline-secondary btn-lg ms-2">Go Back</button>
        </div>
    </div>
    
    <div class="card mt-4 bg-light">
        <div class="card-body">
            <h5 class="card-title">Developer Information</h5>
            <p class="card-text small text-muted">
                For detailed error information, switch to the <strong>Development</strong> environment by setting 
                the <strong>ASPNETCORE_ENVIRONMENT</strong> variable to <strong>Development</strong>.
            </p>
            <p class="card-text small text-danger">
                <strong>Note:</strong> Development mode should not be enabled in deployed applications.
            </p>
        </div>
    </div>
</div>

<style>
    .error-container {
        max-width: 800px;
        margin: 0 auto;
    }
    
    .error-icon {
        animation: pulse 1.5s infinite;
    }
    
</style>
