@model ErrorViewModel

@{
    ViewData["Title"] = $"Error {Model.StatusCode}";
}

<div class="min-h-screen flex items-center justify-center px-4">
    <div class="max-w-lg w-full bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="bg-red-600 px-6 py-4">
            <div class="flex items-center justify-between">
                <h1 class="text-white font-bold text-2xl">Error @Model.StatusCode</h1>
                <div class="text-red-300 text-4xl">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
            </div>
        </div>
        
        <div class="px-6 py-8">
            <div class="mb-6">
                <h2 class="text-gray-800 font-semibold text-xl mb-2">@Model.Message</h2>
                
                <environment exclude="Production">
                    @if (!string.IsNullOrEmpty(Model.Detail))
                    {
                        <p class="text-gray-600">@Model.Detail</p>
                    }
                </environment>
            </div>
            
            <div class="flex justify-end">
                <a href="/" class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors duration-300">
                    Return to Homepage
                </a>
            </div>
        </div>
    </div>
</div>
